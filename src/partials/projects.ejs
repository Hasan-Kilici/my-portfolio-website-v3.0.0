<div class="container"><br>
  <h4>My Projects</h4>
  <hr>
  <div class="row">
    <% projects.forEach( projects =>{ %>
      <div class="col-md-3 d-flex align-items-stretch m-t">
        <div class="card">
          <img class="card-img-top" src="<%= projects.photo %>">
          <div class="card-body">
            <h5><%= projects.title %></h5>
            <span><%= projects.description %></span><br>
          </div>
            <div class="card-footer">
              <a href="<%= projects.url %>"><button class="btn btn-dark">Projeyi görüntüle</button></a>
              </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<style>
  .m-t{margin-top:1.3vh}
  .card-img-top{
    border-top-left-radius:4px;
    border-top-right-radius:4px;
    border-bottom-left-radius:0px;
    border-bottom-right-radius:0px;
    height:25vh;
    border:#dededf 1px solid;
  }
  .card{margin-bottom:1.5vh;}
  @media only screen and (max-width:780px){
  .card{width:100%;}  
  }
</style>
